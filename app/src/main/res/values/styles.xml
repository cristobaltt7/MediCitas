<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Botón sólido principal -->
    <style name="MediButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">#0D5187</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconPadding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- Botón con borde azul (outline), fondo transparente -->
    <style name="MediButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#0D5187</item>
        <item name="strokeColor">#0D5187</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Botón de cerrar sesión con borde rojo -->
    <style name="MediButton.Logout" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#B00020</item>
        <item name="strokeColor">#B00020</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>
